<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>BulGrounds</title>
        <link rel="stylesheet" href="/stylesheets/bootstrap.css">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script src="https://maps.googleapis.com/maps/api/js?key=process.env.Maps_Javascript_API&callback=initMap"
async defer></script>
    </head>
    
  
    
<body>
        
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="/">BulGrounds</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a class="userButtons" href="/campgrounds">Home</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <% if(!currentUser){ %>
                  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a id="jiggle-log-in" class="btn anim" href="/login">Login</a></li>
                  <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a id="jiggle-sign-up" class="btn anim" href="/register">Sign Up</a></li>
              <% } else { %>
                  <li><a id="damnButton" href="#" class="btn btn-success userButtons">Signed In As <%= currentUser.username %></a></li>
                  <li><a class="btn btn-danger userButtons" href="/logout">Logout</a></li>
              <% } %>
          </ul>
        </div>
    </div>
</nav>

<%if (error && error.length > 0) { %>
        <div class="container">
        <div class="alert alert-danger" role="alert"><%=error%></div>
    </div>
<% } %>

<%if (success && success.length > 0) { %>
    <div class="container">
    <div class="alert alert-success" role="alert"><%=success%></div>
</div>
<% } %>

