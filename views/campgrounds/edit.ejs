<% include ../partials/header %>


    <div class="row">
    

        <h1 class="labelColor" style="text-align:center;">Edit</h1>
        <h2 style="text-align:center;margin:25px auto;" ><%=campground.name%></h2>
        <div style="width:30%;margin:25px auto;">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
           
            <div class="form-group">
                <label class="labelColor" for="name">Campground name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" required>
            </div>
            
            <div class="form-group">
                    <label class="labelColor" for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01" required>
            </div>
           
            <div class="form-group">
                <label class="labelColor" for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            
            <div class="form-group">
                    <label class="labelColor" for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" value="<%=campground.description%>" required>
            </div>
            
            <div class="form-group">
                <label class="labelColor" for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
             </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a class="btn btn-info backbuttoncolor" href="/campgrounds">Go back</a>
        </div>
            
    </div>

<% include ../partials/footer %>
